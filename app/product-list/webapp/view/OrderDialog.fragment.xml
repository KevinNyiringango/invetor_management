<?xml version="1.0" encoding="UTF-8" ?>
<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    <Dialog
        title="Create Sales Order"
        class="sapUiPopupWithPadding">
        <f:SimpleForm
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanXL="4"
            labelSpanL="4"
            labelSpanM="4"
            labelSpanS="12">
            <f:content>
                <Label text="Company ID" required="true" />
                <Input
                    value="{order>/company_id}"
                    required="true"
                    placeholder="Enter company ID (e.g. 004)"
                    maxLength="3"
                    type="Text" />
                
                <Label text="Product ID" required="true" />
                <Input
                    value="{order>/product_id}"
                    required="true"
                    placeholder="Enter product ID (e.g. 0007)"
                    maxLength="4"
                    type="Text" />
                
                <Label text="Quantity" required="true" />
                <StepInput
                    value="{order>/quantity}"
                    min="1"
                    max="999"
                    step="1"
                    required="true"
                    validationMode="LiveChange" />
            </f:content>
        </f:SimpleForm>
        <buttons>
            <Button
                text="Submit Order"
                type="Emphasized"
                press=".onSubmitOrder" />
            <Button
                text="Cancel"
                press=".onCancelOrder" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>