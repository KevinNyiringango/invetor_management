<mvc:View
  controllerName="productlist.controller.List"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m">
  <Page title="Product List">
    <headerContent>
      <Text text="Login as 'alice' for admin access" class="sapUiSmallMargin"/>
    </headerContent>
    <content>
      <Table id="productTable" 
             items="{path: '/Product'}">
        <headerToolbar>
          <Toolbar>
            <Title text="Products ({path: '/Product', formatter: '.formatCount'})" level="H2"/>
            <ToolbarSpacer/>
            <Button text="Refresh" press="onRefresh" icon="sap-icon://refresh"/>
          </Toolbar>
        </headerToolbar>
        <columns>
          <Column width="8rem">
            <Text text="ID"/>
          </Column>
          <Column width="12rem">
            <Text text="Name"/>
          </Column>
          <Column width="8rem">
            <Text text="Description"/>
          </Column>
          <Column width="8rem">
            <Text text="Category"/>
          </Column>
          <Column width="8rem">
            <Text text="Unit Price"/>
          </Column>
        </columns>
        <items>
          <ColumnListItem press="onItemPress">
            <cells>
              <Text text="{ID}"/>
              <Text text="{Name}"/>
              <Text text="{Description}"/>
              <Text text="{Category}"/>
              <Text text="{UnitPrice}"/>
            </cells>
          </ColumnListItem>
        </items>
      </Table>
    </content>
  </Page>
</mvc:View>