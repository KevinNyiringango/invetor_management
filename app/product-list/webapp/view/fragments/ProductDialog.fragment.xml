<?xml version="1.0" encoding="UTF-8"?>
<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    <Dialog
        id="productDialog"
        title="{dialog>/title}"
        class="sapUiResponsivePadding">
        <content>
            <f:SimpleForm
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12"
                adjustLabelSpan="false"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false">
                <f:content>
                    <Label text="Name" required="true" />
                    <Input value="{dialog>/product/Name}" />
                    
                    <Label text="Description" />
                    <TextArea value="{dialog>/product/Description}" rows="3" />
                    
                    <Label text="Category" />
                    <Select
                        selectedKey="{dialog>/product/Category}">
                        <items>
                            <core:Item key="Electronics" text="Electronics" />
                            <core:Item key="Clothing" text="Clothing" />
                            <core:Item key="Food" text="Food" />
                            <core:Item key="Other" text="Other" />
                        </items>
                    </Select>
                    
                    <Label text="Unit Price" required="true" />
                    <Input
                        value="{dialog>/product/UnitPrice}"
                        type="Number"
                        description="RWF" />
                    
                    <Label text="Quantity" required="true" />
                    <StepInput
                        value="{dialog>/product/Quantity}"
                        min="0"
                        max="999999"
                        step="1" />
                    
                    <Label text="Minimum Stock Level" />
                    <StepInput
                        value="{dialog>/product/MinimumStockLevel}"
                        min="0"
                        max="999999"
                        step="1" />
                </f:content>
            </f:SimpleForm>
        </content>
        <beginButton>
            <Button
                text="{= ${dialog>/isEdit} ? 'Update' : 'Create' }"
                type="{= ${dialog>/isEdit} ? 'Emphasized' : 'Success' }"
                press="onSaveProduct" />
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                type="Transparent"
                press="onCancelDialog" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>